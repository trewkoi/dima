@page "/login"
@layout HeadlessLayout

<PageTitle>Dima - Entrar</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="12" md="8" lg="6" xl="6" xxl="6">
        <MudPaper Class="mud-width-full pa-8">
            <div class="d-flex justify-center pb-8 pt-8" >
                <img src="imgs/dima.png" width="200" alt="Dima - Controle Financeiro"/>
            </div>
            
            <MudForm @ref="_mudForm">
                <MudTextField 
                    T="string" 
                    Label="E-mail" 
                    Variant="Variant.Outlined" 
                    InputType="InputType.Email"
                    Required="true" 
                    RequiredError="Informe o e-mail" 
                    Validation="@(new EmailAddressAttribute{ ErrorMessage = "E-mail inválido" })" />
                <MudTextField 
                    T="string"
                    Label="Senha"
                    Variant="Variant.Outlined" 
                    InputType="InputType.Password"
                    Required="true"
                    RequiredError="Senha inválida"
                />
            </MudForm>
            
            <div class="d-flex mt-8">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" >Entrar</MudButton>
                <MudSpacer />
                <MudButton Href="/register">Registrar</MudButton>
            </div>
        </MudPaper>
    </MudItem>
</MudGrid>

@code
{
    MudForm? _mudForm;
}
